  },
];
---

<div class="page">
  <section class="hero" id="hero">
    <div class="hero__content">
      <p class="hero__tag">Personal vlog Â· Age 11</p>
      <h1>Hi! I share my days, ideas, and mini adventures.</h1>
      <p class="hero__lead">
        This is my little corner to write about trips, school wins, and the fun
        things I learn every week.
      </p>
      <div class="hero__cta">
        <a class="cta" href="#introduction">Meet me</a>
        <a class="cta ghost" href="#hobby">My hobbies</a>
      </div>
    </div>
    <div class="hero__scene" aria-hidden="true">
      <canvas id="hero-canvas"></canvas>
      <div class="hero__glass">
        <span class="hero__badge">Coastal night drive</span>
        <p>Drag to drift through the glow.</p>
      </div>
    </div>
  </section>

  <section class="intro" id="introduction">
    <div>
      <h2>Introduction</h2>
      <p>
        I am an 11-year-old boy who loves to explore new places, try new food,
        and learn cool facts. I like writing short stories about my day and
        keeping photos of special moments.
      </p>
      <p>
        In this vlog, you will find travel notes, school highlights, and little
        tips I discover while growing up. Thanks for stopping by!
      </p>
    </div>
    <div class="intro__card">
      <h3>Quick facts</h3>
      <ul>
        <li>Favorite color: ocean blue</li>
        <li>Dream trip: giant aquariums + mountain trains</li>
        <li>Best snack: fruit yogurt + crackers</li>
      </ul>
    </div>
  </section>

  <section class="hobby" id="hobby">
    <header>
      <h2>Hobby</h2>
      <p>These are the things that make my weekends feel awesome.</p>
    </header>
    <div class="hobby__grid">
      {hobbies.map((item) => (
        <article class="hobby__card">
          <h3>{item.title}</h3>
          <p>{item.detail}</p>
        </article>
      ))}
    </div>
  </section>
</div>

<script type="module" is:inline>
  import * as THREE from 'https://unpkg.com/three@0.160.0/build/three.module.js';

  const canvas = document.querySelector('#hero-canvas');
  if (canvas) {
    const scene = new THREE.Scene();
    scene.fog = new THREE.Fog('#0b1222', 6, 18);

    const camera = new THREE.PerspectiveCamera(50, 1, 0.1, 100);
    camera.position.set(0, 1.2, 7.5);

    const renderer = new THREE.WebGLRenderer({ canvas, antialias: true, alpha: true });
    renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
    renderer.setClearColor(0x000000, 0);
    renderer.toneMapping = THREE.ACESFilmicToneMapping;
    renderer.outputColorSpace = THREE.SRGBColorSpace;

    const ambient = new THREE.AmbientLight('#6fa8ff', 0.6);
    scene.add(ambient);

    const keyLight = new THREE.DirectionalLight('#8dd5ff', 1.1);
    keyLight.position.set(5, 6, 4);
    scene.add(keyLight);

    const rimLight = new THREE.PointLight('#2dd4bf', 1.4, 20);
    rimLight.position.set(-4, 2, 6);
    scene.add(rimLight);

    const sky = new THREE.Mesh(
      new THREE.SphereGeometry(20, 32, 32),
      new THREE.MeshBasicMaterial({
        color: '#0b1222',
        side: THREE.BackSide,
      })
    );
    scene.add(sky);

    const starGeometry = new THREE.BufferGeometry();
    const starCount = 1400;
    const positions = new Float32Array(starCount * 3);
    const colors = new Float32Array(starCount * 3);

    for (let i = 0; i < starCount; i += 1) {
      const i3 = i * 3;
      const radius = 7 + Math.random() * 6;
      const theta = Math.random() * Math.PI * 2;
      const phi = Math.acos(2 * Math.random() - 1);
      positions[i3] = radius * Math.sin(phi) * Math.cos(theta);
      positions[i3 + 1] = radius * Math.cos(phi) * 0.7;
      positions[i3 + 2] = radius * Math.sin(phi) * Math.sin(theta);
      colors[i3] = 0.7 + Math.random() * 0.3;
      colors[i3 + 1] = 0.8 + Math.random() * 0.2;
      colors[i3 + 2] = 1;
    }

    starGeometry.setAttribute('position', new THREE.BufferAttribute(positions, 3));
    starGeometry.setAttribute('color', new THREE.BufferAttribute(colors, 3));

    const starField = new THREE.Points(
      starGeometry,
      new THREE.PointsMaterial({
        size: 0.04,
        vertexColors: true,
        transparent: true,
        opacity: 0.85,
      })
    );
    scene.add(starField);

    const waveGeometry = new THREE.PlaneGeometry(16, 10, 120, 80);
    const waveMaterial = new THREE.MeshStandardMaterial({
      color: '#0f3b5c',
      metalness: 0.15,
      roughness: 0.35,
      emissive: '#0b1222',
      emissiveIntensity: 0.35,
    });
    const waves = new THREE.Mesh(waveGeometry, waveMaterial);
    waves.rotation.x = -Math.PI / 2.2;
    waves.position.y = -0.7;
    scene.add(waves);

    const orb = new THREE.Mesh(
      new THREE.IcosahedronGeometry(1.1, 2),
      new THREE.MeshStandardMaterial({
        color: '#2dd4bf',
        emissive: '#0ea5e9',
        emissiveIntensity: 0.6,
        roughness: 0.2,
        metalness: 0.8,
      })
    );
    orb.position.set(0, 0.4, 0);
    scene.add(orb);

    const halo = new THREE.Mesh(
      new THREE.TorusGeometry(1.8, 0.08, 16, 120),
      new THREE.MeshStandardMaterial({
        color: '#7dd3fc',
        emissive: '#7dd3fc',
        emissiveIntensity: 0.9,
        roughness: 0.3,
        metalness: 0.6,
      })
    );
    halo.rotation.x = Math.PI / 2.5;
    halo.position.y = 0.3;
    scene.add(halo);

    const pointer = { x: 0, y: 0 };

    const onPointerMove = (event) => {
      const rect = canvas.getBoundingClientRect();
      const x = ((event.clientX - rect.left) / rect.width) * 2 - 1;
      const y = -(((event.clientY - rect.top) / rect.height) * 2 - 1);
      pointer.x = x;
      pointer.y = y;
    };

    const onTouchMove = (event) => {
      if (!event.touches.length) return;
      onPointerMove(event.touches[0]);
    };

    canvas.addEventListener('pointermove', onPointerMove);
    canvas.addEventListener('touchmove', onTouchMove, { passive: true });

    const basePositions = waveGeometry.attributes.position.array.slice();

    const resize = () => {
      const { width, height } = canvas.parentElement.getBoundingClientRect();
      camera.aspect = width / height;
      camera.updateProjectionMatrix();
      renderer.setSize(width, height, false);
    };

    window.addEventListener('resize', resize);
    resize();

    const clock = new THREE.Clock();
    const animate = () => {
      const elapsed = clock.getElapsedTime();
      const positions = waveGeometry.attributes.position;

      for (let i = 0; i < positions.count; i += 1) {
        const ix = i * 3;
        const x = basePositions[ix];
        const y = basePositions[ix + 1];
        positions.array[ix + 2] =
          Math.sin(elapsed * 1.4 + x * 0.9) * 0.12 +
          Math.cos(elapsed * 1.1 + y * 1.2) * 0.1;
      }
      positions.needsUpdate = true;
      waveGeometry.computeVertexNormals();

      starField.rotation.y = elapsed * 0.08 + pointer.x * 0.2;
      starField.rotation.x = elapsed * 0.05 + pointer.y * 0.1;
      orb.rotation.y = elapsed * 0.5;
      orb.rotation.x = elapsed * 0.25;
      halo.rotation.z = elapsed * 0.25;

      camera.position.x += (pointer.x * 1.2 - camera.position.x) * 0.05;
      camera.position.y += (1.2 + pointer.y * 0.6 - camera.position.y) * 0.05;
      camera.lookAt(0, 0.2, 0);

      renderer.render(scene, camera);
      requestAnimationFrame(animate);
    };

    animate();
  }
</script>

